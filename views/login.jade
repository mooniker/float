extends ./layout.jade

block content
  h2 login
  if message.length
    ul
      for msg in message
        li= msg
  form(method='post', action='/login')
    .form-group
      label(for='email') email
      input(type='text', name='email', id='email')
    .form-group
      label(for='email') password
      input(type='password', name='password', id='password')
    input(type='submit', value='login')
